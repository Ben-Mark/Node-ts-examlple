{
  "compilerOptions": {
//    "target": "ES2018",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "stripInternal": true,
      // üëáÔ∏è ... rest

    // enable this rule:
//    "noImplicitAny": false
  },
  "include": ["src",
    "src/tests"
  ]
}
